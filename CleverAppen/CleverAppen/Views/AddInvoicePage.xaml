<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleverAppen.Views.AddInvoicePage"
             Title="AddInvoicePage">
    <VerticalStackLayout Padding="10">
        <Label Text="How would you like to add an invoice?"
               TextColor="#43425D"
               HorizontalOptions="Center"
               Margin="10"/>

        <Button Text="Upload document from device"
                Margin="10"
                BackgroundColor="#347DFE"
                ImageSource="upload.png"
                WidthRequest="300"
                TextColor="#43425D"/>

        <Button Text="Scan document with camera"
                BackgroundColor="#347DFE"
                WidthRequest="300"
                ImageSource="camera.png"
                Margin="10"
                TextColor="#43425D"/>
    </VerticalStackLayout>
</ContentPage>