<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleverAppen.Views.TitleView">
    <VerticalStackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ImageButton Source="addpicturepic.png" 
                     HorizontalOptions="StartAndExpand"
                     Grid.Column="0"
                         x:Name="AddPictureImageButton"
                         Clicked="AddPictureImageButton_Clicked"
                         InputTransparent="False"></ImageButton>
            <Label Text="Company Name" 
               FontAttributes="Bold" 
               HorizontalOptions="CenterAndExpand" 
               VerticalOptions="Center"
               Grid.Column="1"/>
            <ImageButton Source="accountpic.png" 
                     HorizontalOptions="EndAndExpand"
                     Grid.Column="2"
                     x:Name="AccountImageButtons"
                         Clicked="AccountImageButtons_Clicked"
                         InputTransparent="False"></ImageButton>
        </Grid>
    </VerticalStackLayout>
</ContentView>
